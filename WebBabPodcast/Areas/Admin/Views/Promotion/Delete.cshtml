@model WebBanDienThoai.Models.Promotion
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<h2>Xóa khuyến mãi</h2>

<div>
    <h4>Bạn có chắc chắn muốn xóa khuyến mãi này?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên:</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Mô tả:</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Ngày bắt đầu:</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Ngày kết thúc:</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Số tiền giảm giá:</dt>
        <dd class="col-sm-10">@Model.DiscountAmount</dd>
        <dt class="col-sm-2">Loại giảm giá:</dt>
        <dd class="col-sm-10">@Model.IsPercentage</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
