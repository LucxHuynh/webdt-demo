@model List<WebBanDienThoai.Models.Promotion>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<h2>Danh sách khuyến mãi</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Số tiền giảm giá</th>
            <th>Loại giảm giá</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var promotion in Model)
        {
            <tr>
                <td>@promotion.Name</td>
                <td>@promotion.Description</td>
                <td>@promotion.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@promotion.EndDate.ToString("dd/MM/yyyy")</td>
                <td>@promotion.DiscountAmount</td>
                <td>@(promotion.IsPercentage ? "Phần trăm" : "Số tiền cố định")</td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = promotion.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = promotion.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
