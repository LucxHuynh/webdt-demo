@model WebBanDienThoai.Models.Promotion
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<h2>Chỉnh sửa khuyến mãi</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Tên:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mô tả:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Ngày bắt đầu:</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngày kết thúc:</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số tiền giảm giá:</label>
        <input asp-for="DiscountAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Loại giảm giá:</label>
        <select asp-for="IsPercentage" class="form-control">
            <option value="true">Phần trăm</option>
            <option value="false">Số tiền cố định</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
