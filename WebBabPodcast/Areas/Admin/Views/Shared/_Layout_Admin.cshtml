<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanDienThoai</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanPodcast.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />

    <style>
        html, body {
            height: 100%;
        }

        /* Container cho nội dung chính và footer */
        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        /* Custom style for vertical navbar */
        .vertical-navbar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            padding-top: 20px;
            background-color: #f8f9fa; /* Background color for the navbar */
        }

            .vertical-navbar a {
                padding: 15px 10px;
                text-decoration: none;
                font-size: 18px;
                color: black;
                display: block;
            }

                .vertical-navbar a:hover {
                    background-color: #e9ecef; /* Hover background color */
                }

        /* Adjust content area to avoid overlap with the vertical navbar */
        .content-area {
            margin-left: 260px; /* Adjust based on navbar width + some padding */
            padding-top: 20px;
            overflow-x: hidden;
            position: relative;
            flex: 1;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa; /* Màu nền cho footer */
            z-index: 1; /* Đảm bảo footer nằm dưới nội dung */
        }
    </style>
</head>
<body>

    <!-- Vertical Navbar -->
    <div class="vertical-navbar">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Index">Quản lý sản phẩm</a>
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">Quản lý danh mục sản phẩm</a>
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action="Users">Quản lý người dùng</a>
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Promotion" asp-action="Index">Quản lý khuyến mãi</a>
        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Thongke" asp-action="Index">Thống kê đơn hàng</a>
        <a>
            <partial name="_LoginPartial" />
        </a>

        <!-- Add more links as needed -->

    </div>
    <div class="page-container">
        <div class="content-area">
            <header>
                <form id="searchForm">
                    <div class="input-group">
                        <input type="text" id="postTitle" name="postTitle" placeholder="Enter your keyword" />
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </header>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>


            <footer class="border-top footer text-muted">
                <section class="p-3 pt-0">
                    <div class="row d-flex align-items-center">
                        <!-- Grid column -->
                        <div class="col-md-7 col-lg-8 text-center text-md-start">
                            <!-- Copyright -->
                            <div class="p-3 text-black">
                                © 2024 Copyright:
                                <a class="text-black text-decoration-none" href="#">WebBanDienThoai</a>
                            </div>
                            <!-- Copyright -->
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-5 col-lg-4 ml-lg-0 text-center text-md-end">
                            <!-- Facebook -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="bi bi-facebook"></i>
                            </a>

                            <!-- Twitter -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="bi bi-twitter"></i>
                            </a>

                            <!-- Google -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="bi bi-google"></i>
                            </a>

                            <!-- Instagram -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="bi bi-instagram"></i>
                            </a>
                        </div>
                        <!-- Grid column -->
                    </div>
                </section>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>